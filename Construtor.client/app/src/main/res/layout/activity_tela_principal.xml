<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaPrincipal">

    <View
        android:id="@+id/containerTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/curved_top_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/icon_bell"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="@+id/containerTop"
        app:layout_constraintRight_toRightOf="@+id/containerTop"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_notifications_24" />

    <!-- Número de Notificações -->
    <TextView
        android:id="@+id/notification_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/icon_bell"
        app:layout_constraintRight_toRightOf="@id/icon_bell"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/red_circle_background"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="15sp" />


    <View
        android:id="@+id/containerBottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/curved_bottom_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bttcontracts"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_button_selector"
        android:enabled="true"
        android:padding="15dp"
        android:text="@string/btn_contract"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/containerBottom"
        app:layout_constraintBottom_toBottomOf="@id/containerBottom"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bttmessage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_button_selector"
        android:enabled="true"
        android:padding="15dp"
        android:text="@string/btn_message"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bttcontracts"
        app:layout_constraintBottom_toBottomOf="@id/containerBottom"
        tools:ignore="TextContrastCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bttProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/background_button_selector"
        android:enabled="true"
        android:padding="15dp"
        android:text="@string/btn_profile"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/bttmessage"
        app:layout_constraintBottom_toBottomOf="@id/containerBottom"
        tools:ignore="TextContrastCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>